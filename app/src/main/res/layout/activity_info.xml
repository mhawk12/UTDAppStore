<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hfad.utdappstore.InfoActivity">

    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/info_image"
        android:layout_width="80dp"
        android:layout_height="80dp">
    </ImageView>



    <ImageView

        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/utd"/>

    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textSize="25sp"
        android:paddingLeft="20dp"
        android:layout_toRightOf="@+id/info_image"/>

    <TextView
        android:id="@+id/info_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:textSize="15sp"
        android:text="4 Stars"
        android:paddingLeft="20dp"
        android:layout_below="@+id/info_text"
        android:layout_toRightOf="@+id/info_image"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:background="#FF5722"
        android:textColor="@android:color/white"
        android:paddingLeft="20dp"
        android:text="Install"
        android:typeface="normal"
        android:textSize="18sp"
        android:textAlignment="center"
        android:onClick="redirect"
        android:layout_below="@id/info_text2"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/info_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="80dp"
        android:textSize="25sp"
        android:text="Review"
        android:paddingLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/info_text2"
        android:layout_toRightOf="@+id/info_image"/>

    <TextView
        android:id="@+id/info_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:textSize="15sp"
        android:text="@string/review"
        android:paddingLeft="10dp"
        android:layout_below="@+id/info_text3"
        android:layout_toRightOf="@+id/info_image"/>
</RelativeLayout>
